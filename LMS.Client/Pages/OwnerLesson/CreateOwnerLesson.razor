@page "/create-owner-lesson/{courseId:guid}"
@inherits RazorPageCodeSource.OwnerPages.OwnerLessons.CreateOwnerLessonSourceCode

@using LMS.Common.Constants
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = Constants.Owner)]
<div class="lesson-form-container">
    <h1>Create a New Lesson</h1>
    <form>
        <div class="form-group">
            <label for="title">Lesson Title</label>
            <input type="text" @bind="@CreateLessonModel.Title" id="title" name="title" placeholder="Enter the lesson title" required />
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" @bind="@CreateLessonModel.Description" name="description" placeholder="Enter the lesson description"></textarea>
        </div>

        <div class="form-group">
            <button type="submit" onclick="@CreateLesson" class="btn-submit">Add Lesson</button>
        </div>
    </form>
</div>



<style>
    /* Asosiy kontainer */
    .lesson-form-container {
        max-width: 800px;
        margin: 50px auto; /* Markazlash */
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

        /* Sarlavha */
        .lesson-form-container h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

    /* Form guruhlari */
    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

        /* Label uchun */
        .form-group label {
            font-weight: bold;
            margin-bottom: 8px;
            color: #555;
        }

        /* Inputlar uchun */
        .form-group input[type="text"],
        .form-group textarea {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;

</style>