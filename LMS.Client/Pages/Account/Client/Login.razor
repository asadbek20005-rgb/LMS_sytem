@page "/pages/account/client/login"
@inherits RazorPageCodeSource.Client.LoginCodeSource

<div class="login-container">
    <div class="form-card">
        <h1>Welcome Back!</h1>
        <p class="form-description">Login to access your account</p>
        <hr>

        <div class="form-group">
            <label for="phoneNumber"><b>Phone Number</b></label>
            <input type="text" id="phoneNumber" @bind="@model.PhoneNumber" placeholder="Enter your phone number" required>
        </div>

        <button type="submit" class="btn-primary" @onclick="Login">Login</button>

        <div class="signin">
            <p>Don't have an account? <a href="/pages/account/client/register">Sign up here</a></p>
        </div>
    </div>
</div>

