    .verify-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        max-width: 400px;
        padding: 20px;
    }

    .form-card {
        background-color: #fff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        text-align: center;
        width: 100%;
    }

        .form-card h1 {
            font-size: 2rem;
