@page "/pages/account/client/verify-login/{code}"
@inherits RazorPageCodeSource.Client.VerifyLoginCodeSource

<div class="verify-container">
    <div class="form-card">
        <h1>Verify Your Login</h1>
        <p class="form-description">Enter the code sent to your phone to verify your login</p>
        <hr>

        <div class="form-group">
            <label for="phoneNumber"><b>Phone Number</b></label>
            <input type="text" id="phoneNumber" @bind="@OtpModel.PhoneNumber" placeholder="Enter your phone number" required>
        </div>

        <div class="form-group">
            <label for="code"><b>Verification Code</b></label>
            <input type="number" id="code" @bind="@OtpModel.Code" placeholder="Enter the verification code" required>
        </div>

        <!-- Dynamic Code Display -->
        <div class="code-display">
            <p>Your code is:</p>
            <button class="code-display-btn">@Code</button>
        </div>

        <button type="submit" class="btn-primary" @onclick="VerifyLogin">Verify Login</button>

        <div class="resend">
        </div>
    </div>
</div>

