@page "/admin-page/user-courses/{userId:guid}"
@inherits RazorPageCodeSource.AdminPages.Course.GetUserCoursesSourceCode

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Details</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    @foreach(var userCourse in UserCourses)
    {
        <div class="video-card">
            <h1 class="video-title">@userCourse.Title</h1>
            <p class="video-description">@userCourse.Description</p>
            <p class="video-price">@userCourse.Price</p>
            <p class="video-category">@userCourse.Category</p>
            <p class="video-date">@userCourse.CreatedDate</p>
            <button class="delete-button" @onclick="() => GetCourse(userCourse.Id)">Course</button>
        </div>
   
    }
</body>
</html>


<style>
  

    /* Video Card */
    .video-card {
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        padding: 20px;
        width: 300px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .video-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .video-description {
        font-size: 14px;
        color: #666;
        margin-bottom: 10px;
    }

    .video-price {
        font-size: 16px;
        font-weight: bold;
        color: #4CAF50;
        margin-bottom: 10px;
    }

    .video-category {
        font-size: 14px;
        color: #007BFF;
        margin-bottom: 10px;
    }

    .video-date {
        font-size: 12px;
        color: #999;
        margin-bottom: 20px;
    }

    /* Button */
    .delete-button {
        background-color: #FF6B6B;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .delete-button:hover {
            background-color: #E63946;
        }

</style>