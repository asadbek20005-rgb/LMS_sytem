@page "/admin-page/user-course/{userId:guid}/{courseId:guid}"
@inherits RazorPageCodeSource.AdminPages.Course.GetUserCourseSourceCode


<div class="video-card">
    <h1 class="video-title">@Course.Title</h1>
    <p class="video-description">@Course.Description</p>
    <p class="video-price">@Course.Price</p>
    <p class="video-category">@Course.Category</p>
    <p class="video-date">@Course.CreatedDate</p>
    <button class="delete-button" @onclick="GetCourseLessons">Lessons</button>
</div>


<style>
    .video-card {
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 20px auto;
        max-width: 600px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
    }

        .video-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    /* Sarlavha uchun uslub */
    .video-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    /* Tavsif matni uchun uslub */
    .video-description {
        font-size: 16px;
        line-height: 1.5;
        margin-bottom: 10px;
        color: #555;
    }

    /* Narx uchun uslub */
    .video-price {
        font-size: 18px;
        font-weight: bold;
        color: #28a745;
        margin-bottom: 10px;
    }

    /* Kategoriya uchun uslub */
    .video-category {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 10px;
    }

    /* Sana uchun uslub */
    .video-date {
        font-size: 12px;
        color: #888;
        margin-bottom: 20px;
    }

    /* Tugma uchun uslub */
    .delete-button {
        background-color: #dc3545;
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-transform: uppercase;
        transition: background-color 0.3s ease;
    }

        .delete-button:hover {
            background-color: #c82333;
        }

        .delete-button:active {
            transform: scale(0.98);
        }

</style>