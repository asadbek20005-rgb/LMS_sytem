@page "/admin-action/courses"
@inherits RazorPageCodeSource.AdminPages.Course.GetCoursesSourceCode


<div class="user-list">
    <h2>User List</h2>
    <table class="user-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Courses)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Price</td>
                    <td>@course.Category</td>
                    <td>@course.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .user-list {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .user-list h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .user-table th, .user-table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        .user-table th {
            background-color: #007bff;
            color: #fff;
        }

        .user-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>


