@page "/admin-pages/contents/{userId:guid}/{courseId:guid}/{lessonId:int}"
@inherits RazorPageCodeSource.AdminPages.Content.LessonContentsSourceCode

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Example</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    @foreach(var lessonContent in Contents)
    {
        <div class="form-container">
            <form>
                <label for="id">Id:</label>
                <input type="number" id="id" name="id" readonly value="@lessonContent.Id">

                <label for="name">Name:</label>
                <input type="text" id="name" name="name" readonly value="@lessonContent.Name">

                <button type="submit" @onclick="()=>GetLessonContent(lessonContent.Id)">Watch</button>
            </form>
        </div>
    }
</body>
</html>
